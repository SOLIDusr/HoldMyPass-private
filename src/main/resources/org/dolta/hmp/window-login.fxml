<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="600.0" maxWidth="400.0" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #2E3348;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dolta.hmp.LoginController">
    <AnchorPane prefHeight="51.0" prefWidth="400.0" style="-fx-background-color: FAFAFA;">
        <Label layoutX="110.0" layoutY="10.0" text="Enter your account">
            <font>
                <Font name="Comic Sans MS Italic" size="18.0" />
            </font>
        </Label>
    </AnchorPane>
    <Label layoutX="23.0" layoutY="76.0" text="Login" textFill="WHITE">
        <font>
            <Font name="Comic Sans MS Italic" size="22.0" />
        </font>
    </Label>
    <TextField fx:id="loginTextField" layoutX="42.5" layoutY="119.0" prefHeight="25.0" prefWidth="297.0" promptText="Login">
        <font>
            <Font name="Comic Sans MS" size="13.0" />
        </font>
    </TextField>
    <Label layoutX="23.0" layoutY="166.0" text="Password" textFill="WHITE">
        <font>
            <Font name="Comic Sans MS Italic" size="22.0" />
        </font>
    </Label>
    <TextField fx:id="passwordTextField" layoutX="42.5" layoutY="209.0" prefHeight="25.0" prefWidth="297.0" promptText="Password">
        <font>
            <Font name="Comic Sans MS" size="13.0" />
        </font>
    </TextField>
    <Button fx:id="enterButton" alignment="CENTER" layoutX="41.0" layoutY="282.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="194.0" text="Enter">
        <font>
            <Font name="Comic Sans MS Bold Italic" size="18.0" />
        </font>
    </Button>
    <Label fx:id="errorText" layoutX="43.0" layoutY="335.0" prefHeight="144.0" prefWidth="297.0" textFill="#ff5c5c" wrapText="true">
        <font>
            <Font name="Arial Black" size="15.0" />
        </font>
    </Label>
   <CheckBox fx:id="keepSessionCheck" layoutX="41.0" layoutY="252.0" mnemonicParsing="false" text="Keep my session" textFill="#f8f8f8">
      <font>
         <Font name="Comic Sans MS" size="14.0" />
      </font>
   </CheckBox>
   <Label fx:id="singInText" layoutX="22.0" layoutY="515.0" text="Don't have an account? Sing in!" textFill="WHITE">
      <font>
         <Font name="Comic Sans MS Italic" size="16.0" />
      </font>
   </Label>
</AnchorPane>
